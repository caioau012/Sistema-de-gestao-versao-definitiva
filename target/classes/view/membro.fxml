<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.anhembimorumbiprojetos.controller.MembroControllerView"
            prefWidth="800" prefHeight="600">

    <top>
        <Label text="GestÃ£o de Membros"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20px;">
            <HBox spacing="10">
                <Label text="Nome:"/>
                <TextField fx:id="nomeField" prefWidth="200"/>
                <Label text="Email:"/>
                <TextField fx:id="emailField" prefWidth="200"/>
                <Button text="Adicionar" onAction="#onAdicionarMembro"/>
                <Button text="Atualizar" onAction="#onAtualizarMembro"/>
                <Button text="Excluir" onAction="#onExcluirMembro"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Filtrar por Equipe:"/>
                <ComboBox fx:id="equipeFiltroComboBox" promptText="Selecione uma equipe"/>
                <Button text="Filtrar" onAction="#onFiltrarPorEquipe"/>
            </HBox>

            <TableView fx:id="tabelaMembros" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                </columns>
            </TableView>

            <Button text="Voltar ao Dashboard" onAction="#onVoltarDashboard" style="-fx-padding: 10px;"/>
        </VBox>
    </center>
</BorderPane>

