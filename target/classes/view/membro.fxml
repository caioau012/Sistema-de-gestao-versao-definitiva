<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sistema.controller.MembroController">
    <top>
        <HBox spacing="10" style="-fx-padding: 10px;">
            <Button text="Voltar" onAction="#voltar"/>
            <Label text="Gerenciamento de Membros" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    
    <center>
        <VBox spacing="10" style="-fx-padding: 20px;">
            <HBox spacing="10">
                <TextField fx:id="campoPesquisa" promptText="Pesquisar membros..." style="-fx-pref-width: 300px;"/>
                <Button text="Pesquisar" onAction="#pesquisarMembros"/>
                <Button text="Novo Membro" onAction="#novoMembro"/>
            </HBox>
            
            <TableView fx:id="tabelaMembros" style="-fx-pref-height: 400px;">
                <columns>
                    <TableColumn text="ID" fx:id="colunaId" prefWidth="50"/>
                    <TableColumn text="Nome" fx:id="colunaNome" prefWidth="200"/>
                    <TableColumn text="Email" fx:id="colunaEmail" prefWidth="200"/>
                    <TableColumn text="Equipe" fx:id="colunaEquipe" prefWidth="150"/>
                </columns>
            </TableView>
            
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Editar" onAction="#editarMembro"/>
                <Button text="Excluir" onAction="#excluirMembro" style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
                <Button text="Sem Equipe" onAction="#listarMembrosSemEquipe"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>