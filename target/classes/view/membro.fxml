<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.anhembimorumbiprojetos.controller.MembroControllerView"
            prefWidth="700" prefHeight="500">

    <top>
        <Label text="Cadastro de Membros"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20px;">
            <GridPane hgap="10" vgap="10">
                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Equipe:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="equipeComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <Button text="Adicionar Membro" onAction="#onAdicionarMembro" style="-fx-padding: 10px;"/>

            <TableView fx:id="tabelaMembros" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="colEquipe" text="Equipe" prefWidth="150"/>
                </columns>
            </TableView>
            <Button text="Voltar ao Dashboard" onAction="#onVoltarDashboard" style="-fx-padding: 10px;"/>
            </VBox>
    </center>
</BorderPane>


