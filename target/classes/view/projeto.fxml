<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.anhembimorumbiprojetos.controller.ProjetoControllerView"
            prefWidth="800" prefHeight="600">

    <top>
        <Label text="Cadastro de Projetos"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>


    <center>
        <VBox spacing="15" style="-fx-padding: 20px;">
            <GridPane hgap="10" vgap="10">
                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Descrição:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="descricaoField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Data Início:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dataInicioField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Data Término:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dataTerminoField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="statusField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Equipe:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="equipeComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Adicionar" onAction="#onAdicionarProjeto"/>
                <Button text="Atualizar" onAction="#onAtualizarProjeto"/>
                <Button text="Excluir" onAction="#onExcluirProjeto"/>
            </HBox>

	<HBox spacing="10">
		<TextField fx:id="filtroField" promptText="Filtrar por nome" />
		<Button text="Filtrar" onAction="#onFiltrarProjetos" />
		<ComboBox fx:id="statusFiltroComboBox"
			promptText="Filtrar por status" />
		<Button text="Filtrar por Status"
			onAction="#onFiltrarPorStatus" />
	</HBox>

            <TableView fx:id="tabelaProjetos" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="colEquipe" text="Equipe" prefWidth="150"/>
                </columns>
            </TableView>

            <Button text="Voltar ao Dashboard" onAction="#onVoltarDashboard" style="-fx-padding: 10px;"/>
        </VBox>
    </center>
</BorderPane>


