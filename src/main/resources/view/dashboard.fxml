<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.anhembimorumbiprojetos.controller.DashboardController"
            prefWidth="1000" prefHeight="600">

    <left>
        <VBox spacing="10" style="-fx-padding: 20px; -fx-background-color: #f0f0f0;">
            <Label text="Menu" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Button text="Dashboard" onAction="#onDashboard"/>
            <Button text="Projetos" onAction="#onProjetos"/>
            <Button text="Tarefas" onAction="#onTarefas"/>
            <Button text="Equipes" onAction="#onEquipes"/>
            <Button text="Membros" onAction="#onMembros"/>
        </VBox>
    </left>

    <top>
        <HBox spacing="30" style="-fx-padding: 20px; -fx-background-color: #e8e8e8;">
            <VBox>
                <Label text="Total de projetos" style="-fx-font-weight: bold;"/>
                <Label fx:id="totalProjetosLabel"/>
            </VBox>
            <VBox>
                <Label text="Projetos concluÃ­dos" style="-fx-font-weight: bold;"/>
                <Label fx:id="projetosConcluidosLabel"/>
            </VBox>
            <VBox>
                <Label text="Total de equipes" style="-fx-font-weight: bold;"/>
                <Label fx:id="totalEquipesLabel"/>
            </VBox>
            <VBox>
                <Label text="Total de membros" style="-fx-font-weight: bold;"/>
                <Label fx:id="totalMembrosLabel"/>
            </VBox>
        </HBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 30px;">
            <Label text="Projetos Recentes" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <VBox fx:id="projetosRecentesBox" spacing="10"/>
        </VBox>
    </center>
</BorderPane>