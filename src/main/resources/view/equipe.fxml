<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.anhembimorumbiprojetos.view.EquipeViewController">

	<top>
		<HBox spacing="10" style="-fx-padding: 10px;">
			<Button text="Voltar" onAction="#voltar" />
			<Label text="Gerenciamento de Equipes"
				style="-fx-font-size: 18px; -fx-font-weight: bold;" />
		</HBox>
	</top>

	<center>
		<VBox spacing="10" style="-fx-padding: 20px;">
			<HBox spacing="10">
				<TextField fx:id="campoPesquisa"
					promptText="Pesquisar equipes..." style="-fx-pref-width: 300px;" />
				<Button text="Pesquisar" onAction="#pesquisarEquipes" />
				<Button text="Nova Equipe" onAction="#novaEquipe" />
			</HBox>

			<TableView fx:id="tabelaEquipes"
				style="-fx-pref-height: 400px;">
				<columns>
					<TableColumn fx:id="colunaId" text="ID" prefWidth="50" />
					<TableColumn fx:id="colunaNome" text="Nome"
						prefWidth="200" />
					<TableColumn fx:id="colunaDescricao" text="Descrição"
						prefWidth="250" />
					<TableColumn fx:id="colunaDataCriacao"
						text="Data Criação" prefWidth="100" />
					<TableColumn fx:id="colunaMembros" text="Membros"
						prefWidth="80" />
				</columns>
			</TableView>

			<HBox spacing="10" alignment="CENTER_RIGHT">
				<Button text="Editar" onAction="#editarEquipe" />
				<Button text="Excluir" onAction="#excluirEquipe"
					style="-fx-background-color: #ff4444; -fx-text-fill: white;" />
				<Button text="Ver Membros" onAction="#verMembrosEquipe" />
				<Button text="Gerenciar Membros"
					onAction="#gerenciarMembrosEquipe" />
			</HBox>
		</VBox>
	</center>

	<bottom>
		<Label text="Sistema de Gerenciamento v1.0"
			style="-fx-padding: 10px;" />
	</bottom>
</BorderPane>