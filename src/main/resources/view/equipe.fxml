<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.anhembimorumbiprojetos.controller.EquipeControllerView"
            prefWidth="700" prefHeight="500">

    <top>
        <Label text="Cadastro de Equipes"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20px;">
            <GridPane hgap="10" vgap="10">
                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Descrição:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="descricaoField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Data de Criação:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dataCriacaoField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <Button text="Adicionar Equipe" onAction="#onAdicionarEquipe" style="-fx-padding: 10px;"/>

            <TableView fx:id="tabelaEquipes" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
                    <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="200"/>
                </columns>
            </TableView>
            <Button text="Voltar ao Dashboard" onAction="#onVoltarDashboard" style="-fx-padding: 10px;"/>
        </VBox>
    </center>
</BorderPane>
