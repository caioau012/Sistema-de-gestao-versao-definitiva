<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.anhembimorumbiprojetos.controller.ProjetoController">
    <top>
        <HBox spacing="10" style="-fx-padding: 10px;">
            <Button text="Voltar" onAction="#voltar"/>
            <Label text="Gerenciamento de Projetos" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    
    <center>
        <VBox spacing="10" style="-fx-padding: 20px;">
            <HBox spacing="10">
                <TextField fx:id="campoPesquisa" promptText="Pesquisar projetos..." style="-fx-pref-width: 300px;"/>
                <Button text="Pesquisar" onAction="#pesquisarProjetos"/>
                <Button text="Novo Projeto" onAction="#novoProjeto"/>
            </HBox>
            
            <TableView fx:id="tabelaProjetos" style="-fx-pref-height: 400px;">
                <columns>
                    <TableColumn text="ID" fx:id="colunaId" prefWidth="50"/>
                    <TableColumn text="Nome" fx:id="colunaNome" prefWidth="200"/>
                    <TableColumn text="Equipe" fx:id="colunaEquipe" prefWidth="150"/>
                    <TableColumn text="Status" fx:id="colunaStatus" prefWidth="100"/>
                    <TableColumn text="Data Início" fx:id="colunaDataInicio" prefWidth="100"/>
                    <TableColumn text="Data Término" fx:id="colunaDataTermino" prefWidth="100"/>
                </columns>
            </TableView>
            
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Editar" onAction="#editarProjeto"/>
                <Button text="Excluir" onAction="#excluirProjeto" style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
                <Button text="Ver Tarefas" onAction="#verTarefasProjeto"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>